{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:unicorn/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["node_modules/", "**/*.scss"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off"
  }
}
